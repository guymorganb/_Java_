package Functions;
import java.util.Arrays;
public class addBetween3Arrays {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n = 6; 
		
		int x = 16;
		
		int[] p1 = {8, 1, 2, 3, 2, 5}; 
		
		int[] p2 = {9, 5, 6, 7, 7, 6}; 
		
		int[] f = new int[n];
		int R = 0;
		int sum = 0;
	    for(int i = 0; i<n; i++){
	    	
	    	sum = p1[i]+ p2[i];
	    	
	    	if(sum > x){
	    		
	    		R = sum - x;
	    		sum = x;
	    		f[i+1] = R;
	    		//System.out.println(sum);
	    		
	    	}else{
	    	  
	    		R = 0;
	    	}
	    	
	    	f[i]= f[i] + sum + R;
	    	System.out.println(sum);
	   }System.out.print(Arrays.toString(f));
	}

}

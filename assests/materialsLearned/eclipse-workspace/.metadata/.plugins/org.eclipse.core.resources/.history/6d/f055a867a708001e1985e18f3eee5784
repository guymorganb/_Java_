



package ObjectOrientedPrograming;

import java.util.*; // this imports all classes and interfaces from util, such as (List, Set, Map, TreeMap) and (Date, Calendar) and (Random, Scanner)

public class Polynomial {
	private Map<Integer, Integer> createPolynomial = new TreeMap<>();
	
	public void add(int power, int coefficent) {
		// if the power already exists in the map, add the new coefficient to the existing coefficient
		if(createPolynomial.containsKey(power)) {
			createPolynomial.put(power, createPolynomial.get(power) + coefficent);
		} else {
			// if the power does not exist in the map, simply put the new power and coefficient in the map
			createPolynomial.put(power, coefficent);
		}	// the 'put' method is used to add key/value pairs to a Map
			// a Map is just an object with key/value pairs
	}
	public void print() {
		
		System.out.println(createPolynomial`.);
	}
}

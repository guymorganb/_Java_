package Functions;

public class addBetween3Arrays {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n = 6; 
		
		int x = 16;
		
		int[] p1 = {8, 1, 2, 3, 2, 5}; 
		
		int[] p2 = {9, 5, 6, 7, 7, 6}; 
		
		int[] f = new int[n];
	    int k = 1;
	    int j = 0;
	        
	    for(int i = 0; i<n; i++){
	      int sum = p1[i]+p2[j];
	      if(sum > x){
	         sum = x;
	      }
	      f[k-1] = (f[k-1]+sum);
	      int R = 0;
	      if(sum > x){
	          R = sum - x;
	          f[k] = R;
	      }else{
	          R = 0;
	      }
	      j++;
	      k++;
	   }
	}

}

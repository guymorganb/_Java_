package Functions;

public class ArrayRotation {
		
	public static void printArray(int[] array) {
		int n = array.length;
		for(int i = 0; i < n; i++) {
			System.out.print(array[i]+ " ");
		}
	}
	
	public static int[] rotateArray(int[] array) {
		for(int i = 0, j = array.length-1; j >= (int) Math.floor((array.length/2)); i++, j--) {
			int temp = array[i];
			array[i]= array[j];
			array[j] = temp;
		}return array;
	}
	
	public static int[] rotateRight(int[] array, int Rotation) {
		int j = array.length - 1;
		int k = array.length - Rotation;
		for(int i = 0, m = Rotation-1; i < (int)Math.floor(Rotation/2); i++, m--) {
			int temp = array[m];
			array[Rotation-1] = array[i];
			array[i] = temp;
			while(j >= (int)Math.floor(array.length-Rotation)/2) {
				int temp1 = array[j];
				System.out.print(array[k]);
				array[j] = array[k];
				array[k] = temp1;
				j--;
				k++;
			}
		}return array;
	}
	
	public static int[] rotateLeft(int[] array, int Rotation) {
		int j = 0;
		int k = Rotation-1;
		for(int i = array.length-1, m = array.length - Rotation; i >= (int)Math.floor(Rotation/2); i--, m++) {
			int temp = array[i];
			array[i] = array[m];
			array[m] = temp;
			while(j < (int)Math.floor(array.length - Rotation)/2) {
				int temp1 = array[k];
				array[k] = array[j];
				array[j] = temp1;
				j++;
				k--;
			}
		}return array;
	}
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {2,5,3,1,7,9,10,4};
		boolean rotateRight = true;
		int rotationFactor = 2;
		//printArray(arr);
		int [] rotated = rotateArray(arr);
		//printArray(rotated);
		if(rotateRight) {
			int[] rightShift = rotateRight(rotated, rotationFactor);
			printArray(rightShift);
		}else if(!rotateRight) {
			int [] leftShift = rotateLeft(rotated, rotationFactor);
			printArray(leftShift);
		}
	}

}





package ObjectOrientedPrograming;

import java.util.*; // this imports all classes and interfaces from util, such as (List, Set, Map, TreeMap) and (Date, Calendar) and (Random, Scanner)

public class Polynomial {
	private Map<Integer, Integer> Polynomial = new TreeMap<>();
	
	public void add(int power, int coefficent) {
		// if the power already exists in the map, add the new coefficient to the existing coefficient
		if(Polynomial.containsKey(power)) {
			Polynomial.put(power, Polynomial.get(power) + coefficent);
		} else {
			// if the power does not exist in the map, simply put the new power and coefficient in the map
			Polynomial.put(power, coefficent);
		}	// the 'put' method is used to add key/value pairs to a Map
			// a Map is just an object with key/value pairs
	}
	
	public void print() {
		    StringBuilder polyString = new StringBuilder();

		    for (Map.Entry<Integer, Integer> i : Polynomial.entrySet()) {
		        int power = i.getKey();
		        int coeff = i.getValue();

		        if (power == 0) {
		            polyString.append(coeff);
		        } else if (power == 1) {
		            polyString.append(coeff + "x");
		        } else {
		            polyString.append(coeff + "x^" + power);
		        }

		        polyString.append(" + ");
		    }

		    // Remove the last " + "
		    if (polyString.length() > 3) {
		        polyString.setLength(polyString.length() - 3);
		    }

		    System.out.println(polyString.toString());

	}
}
